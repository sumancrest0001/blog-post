<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Title of the post", autofocus: true %><br>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Discription of the post"%><br>
      </div>
      <%= f.submit "Save", class: "btn btn-success btn-lg" %>
    <% end %>
    <div class="col-xs-4, col-xs-offset-4">
      <%= link_to "Cancel the post", posts_path %>
    </div>
  </div>
</div>
