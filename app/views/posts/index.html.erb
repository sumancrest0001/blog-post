<h1 align="center", class="posts-index"> Listing all posts </h1>
  <% @posts.each do |post| %>
  <div class="row">
    <div class="col-xs-8, col-xs-offset-2">
      <div class="well well-lg">
        <h3 class="post-title">
          <%= link_to post.title, posts_path(post) %>
        </h3>
        <div class="post-body">
          <%= truncate(post.body, length: 100) %>
        </div>
        <br>
        <div class="post-actions">
          <%= link_to "View all posts", posts_path, class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this post", post_path(post),method: :delete,
                                          data: {confirm: "Are you sure that you want to delete the post?"},
                                          class: "btn btn-xs btn-danger" %>
          <%= link_to "Edit this post", edit_post_path(post), class: "btn btn-xs btn-info" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
